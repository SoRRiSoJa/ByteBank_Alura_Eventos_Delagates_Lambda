<Window x:Class="Agencias.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agencias"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <ListBox x:Name="lstAgencias" Width="380" Height="380" Canvas.Top="15" Canvas.Left="15"></ListBox>
        <StackPanel Canvas.Top="15" Canvas.Left="400">
            <TextBlock FontWeight="Bold">Número</TextBlock>
            <TextBlock x:Name="txtNumero" >Número</TextBlock>
            <TextBlock FontWeight="Bold">Nome</TextBlock>
            <TextBlock Name="txtNome">Nome</TextBlock>
            <TextBlock FontWeight="Bold">Telefone</TextBlock>
            <TextBlock Name="txtTelefone" >Telefone</TextBlock>
            <TextBlock FontWeight="Bold">Descrição</TextBlock>
            <TextBlock Name="txtDescricao">Descrição</TextBlock>
            <TextBlock FontWeight="Bold">Endereço</TextBlock>
            <TextBlock x:Name="txtEndereco">Endereço</TextBlock>
        </StackPanel>
    </Canvas>
</Window>
